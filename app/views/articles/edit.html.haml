.container
  = form_with(model: @article, url: article_path(@article), method: 'put', local: true) do |f|
    %div
      .top-title New Board
    %div
      = f.label :title, 'Name'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :content, 'Description'
    %div
      = f.text_area :content
    = f.submit '保存', class: 'btn-primary'