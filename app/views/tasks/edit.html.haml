.container
  %h2.title Edit Page
  = form_with(model: @task, url: board_task_path(@task.board), method: 'put', local: true) do |f|
    %div
      = f.label :title, 'タイトル'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :content, '内容'
    %div
      = f.text_area :content, class: 'description'
    %div
      = f.label :eyecatch, 'アイキャッチ'
    %div
      = f.file_field :eyecatch, class: 'text2'
    %div
      = f.label :period, '期限'
    %div
      = f.date_field :period, class: 'text'
    = f.submit 'Submit', class: 'btn-primary'